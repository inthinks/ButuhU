 <script>
        function addCommas(nStr){
            nStr += '';
            var x = nStr.split('.');
            var x1 = x[0];
            var x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx,'$1' + '.' + '$2');
            }
            
            
            strs='Rp. ' + x1 + x2 +',-';
            return strs;
        }
        
        function calculate_loan(){
            
            
            val=parseInt($('#la_hidden').val());
            periode=parseInt($("#sliderMonth").text());
            price=parseInt($("#sliderPrice").text());

            var interestFee = (<?php if($this->uri->segment('1')=='home'){echo $data['interest'];}else{echo '1';}?>/100)*val*periode;
            total_repayable = interestFee + val;
            
            new_interestfee=addCommas(interestFee);
            new_total_repayable=addCommas(total_repayable);
            
            var now = new Date(); 
            now.setDate(now.getDate() + parseInt(periode));

            new_date=$.datepicker.formatDate("dd MM yy",now);
            new_dates=$.datepicker.formatDate("y-m-d",now);
                        // console.log(new_date);
            
            $("#due_date").text(new_date);

            $("#interest").text(new_interestfee );
            $('#repayable').text(new_total_repayable );

            //set value loan
            $("#interest_fee").val(interestFee);
            $("#repay").val(total_repayable);
            $("#length").val(periode);
            $("#due").val(new_dates);


        }
        $(document).ready(function(){
            $("#sliderPrice").slider({
                min: <?php if($this->uri->segment('1')=='home'){echo $data['min_amount'];}else{echo '1';}?>, 
                max: <?php if($this->uri->segment('1')=='home'){echo $data['max_amount'];}else{echo '1';}?>, 
                value: <?php if($this->uri->segment('1')=='home'){echo $data['min_amount'];}else{echo '1';}?>, 
                step: 100000 
            }).slider("float",{
                prefix: "Rp&nbsp;",
                suffix: ",-"
            }).on("slidechange", function( e, ui ) {
                
                setTimeout(function() {
                    var val = ui.value
                    $("span.info.price, #loan_amount").html(addCommas(val));
                    $('#la_hidden').val(val);
                    calculate_loan();
                }, 200 );
                    
            });
            
            $("#sliderMonth").slider({
                min: <?php if($this->uri->segment('1')=='home'){echo $data['min_period'];}else{echo '1';}?>, 
                max: <?php if($this->uri->segment('1')=='home'){echo $data['max_period'];}else{echo '1';}?>, 
                value: <?php if($this->uri->segment('1')=='home'){echo $data['min_period'];}else{echo '1';}?>, 
                step: 1 
            }).slider("float",{
                suffix: "&nbsp;Hari"
            }).on("slidechange", function( e, ui ) {
            
            setTimeout(function() {
                var valDay = ui.value
                $("span.info.month").html(valDay +' Hari');
                periode = parseInt(valDay);
                $("#periode_hidden").val(periode);
                calculate_loan();
                }, 200 );
            });
        });
        $(window).bind('load', function(){
        });
        $(document).ready(function(e) {
            
            calculate_loan();

        });

</script>
