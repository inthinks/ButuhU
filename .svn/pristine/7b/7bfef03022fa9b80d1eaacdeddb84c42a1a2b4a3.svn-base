@charset "UTF-8";

.headerBox-mobile {
	width: 100%;
	height: 72px;
	margin-top: 30px;
}

.headerBox-mobile h1 {
	float: left;
}

.headerBox-mobile #logo {
	display: block;
	text-indent: -9999px;
	background: url("../images/logo.png") no-repeat center top;
	background-size: contain;
	width: 201px;
	height: 68px;
	margin-left: 40px;
}

.icon-box {
	float: right;
	margin-right: 40px;
}

.icon-man-blue {
	width: 40px;
	height: 37px;
	background: url("../images/icon_man_blue.png") no-repeat center top;
	background-size: contain;
	display: inline-block;
}

.icon-menu {
	background: url("../images/icon_menu.png") no-repeat center top;
	background-size: contain;
	width: 44px;
	height: 32px;
	display: inline-block;
}

.popup-all {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0px;
	left: 0px;
	overflow: auto;
	z-index: 100000;
	display: none;
}

.popup-overlay {
	width: 100%;
	height: 9999px;
	background: #0b5689 none repeat scroll 0% 0%;
	position: fixed;
	top: 0px;
	left: 0px;
}

.popup-box {
	left: 50%;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	transform: translateX(-50%);
	position: absolute;
	max-width: 460px;
	width: 100%;
}

.popup-header{

}

.popup-header-left {
	float: left;
}

.popup-header-right {
	float: right;
}

.popup-content {
	color: #FFF;
	text-align: center;
}

@media only screen and (max-width: 980px){
	header {
		height: 100%;
	}

	.headerBox {
		display: none;
	}

	.headerBox-mobile {
		display: block;
	}

	.sliderBox {
		width: 100%;
		padding: 0px 40px;
		text-align: center;
	}

	.sliderInfoBox {
		width: 100%;
		text-align: center;
		margin-bottom: 30px;
		float: none;
	}

	.loanWrapper {
		float: none;
		margin: 0 auto;
	}

	.rulesBox {
		width: 100%;
	}

	.rulesBox h3 {
		text-align: center;
	}

	.rulesBox ul {
		text-align: center;
	}

	.rulesBox ul li {
		display: inline-block;
		float: none;
		width: 210px
	}

	.stepImage {
		width: 210px;
		height: 150px;
	}

	.stepInfo {
		height: 145px;
		text-align: left;
	}

	.paymentBox {
		width: 100%;
		height: 100%;
		display: block;
	}

	.paymentInfo {
		width: 100%;
		display: block;
		text-align: center;
		padding-right: 20px;
	}

	.transferBox {
		width: 100%;
		display: block;
	}

	.transferBox ul {
		text-align: center;
	}

	.transferBox ul li {
		display: inline-block;
		float: none;
		margin-top: 21px;
		margin-left: 10px;
	}

	.footerBox {
		width: 100%;
		text-align: center;
	}

	.footerLeftBox {
		float: none;
	}

	.footerRightBox {
		display: none;
	}
}

@media only screen and (max-width: 768px){
}

@media only screen and (max-width: 640px){
	.sliderInfoBox {
		font-size: 24px;
	}

	.loanWrapper {
		width: 100%;
	}

	.loanBox h3, .loanDetailBox h3 {
		font-size: 18px;
	}

	.loanBox {
		width: 100%;
		float: none;
	}

	.loanInfoBox h4 {
		font-size: 16px;
	}

	span.info {
		float: none;
		text-align: left;
		border: 1px solid #F5B419;
		padding: 14px 10px;
		font-size: 16px;
		font-weight: bold;
	}

	.loanDetailBox {
		width: 100%;
		float: none;
		padding-left: 0px;
		border-top: 1px solid #E6E7E8;
		border-left: 0px;
		padding-top: 13px;
	}

	.loanDetailBox table {
		margin: 0px auto;
		text-align: center;
	}

	.loanDetailBox table tr {
		display: inline-block;
		text-align: left;
		margin: 0px 20px;
	}

	.loanDetailBox table tr td {
		font-size: 16px;
	}

	.loanDetailBox table tr td:nth-child(1) {
		/*width: 100%;*/
	}

	.loanDetailBox table tr td:nth-child(2) {
		padding: 0px 0px 20px;
	}

	.loanDetailBox table tr td:last-child {
		color: #F5B419;
		display: inline-block;
	}

	.loanWrapper .nextBtn {
		float: none;
	}

	.loanWrapper .defBtn {
		width: 160px;
		height: 50px;
		font-size: 16px;
		margin: 0px auto;
		padding-top: 10px;
	}

	.rulesBox h3 {
		font-size: 18px;
	}

	.stepInfo span, .stepInfo p {
		font-size: 16px;
	}

	.paymentInfo {
		font-size: 18px;
	}

	.transferBox ul li span {
		font-size: 16px;
	}
}

