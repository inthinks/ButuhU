<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');
class Loan extends CI_Controller {
	function __construct(){
		parent::__construct();
		if($this->session->userdata('admin_logged_in')==false)redirect('admin/login');
		$this->load->model('loan_model');
		$this->load->model('general_model');
		
	}
	function index(){
		$this->data['content']='admin/loan/list';
		$this->data['lists'] = $this->loan_model->data();
		$this->load->view('common/admin/body',$this->data);
	}

    function reject($id){
    	$table = 'loan_tb';
    	$date = date('Y-m-d H:i:s');
    	$where = array('id' => $id);
    	$data = array('loan_status' => 1,
    		'updated_date' => $date);
        $this->general_model->update_data($table, $data, $where);
        redirect($_SERVER['HTTP_REFERER']);
    }

    function pending($id){
    	$table = 'loan_tb';
    	$date = date('Y-m-d H:i:s');
    	$where = array('id' => $id);
    	$data = array('loan_status' => 0,
    			'updated_date' => $date
    			);
        $this->general_model->update_data($table, $data, $where);
        redirect($_SERVER['HTTP_REFERER']);
    }


}