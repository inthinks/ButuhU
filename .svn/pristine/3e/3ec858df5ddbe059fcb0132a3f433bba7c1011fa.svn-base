
/*===========================================================================
0.0 Common
===========================================================================*/

@charset "UTF-8";

.headerBox-mobile {
	width: 100%;
	height: 72px;
	margin-top: 30px;
}

.headerBox-mobile h1 {
	float: left;
}

.headerBox-mobile #logo {
	display: block;
	text-indent: -9999px;
	background: url("../images/logo.png") no-repeat center top;
	background-size: contain;
	width: 201px;
	height: 68px;
	margin-left: 40px;
}

.icon-box {
	float: right;
	margin-right: 40px;
}

.icon-man-blue {
	width: 40px;
	height: 37px;
	background: url("../images/icon_man_blue.png") no-repeat center top;
	background-size: contain;
	display: inline-block;
	margin-right: 20px;
}

.icon-man-white {
	width: 40px;
	height: 37px;
	background: url("../images/icon_man_white.png") no-repeat center top;
	background-size: contain;
	display: inline-block;
	margin-right: 20px;
}

.icon-menu {
	background: url("../images/icon_menu.png") no-repeat center top;
	background-size: contain;
	width: 44px;
	height: 32px;
	display: inline-block;
}

.icon-close {
	background: url("../images/icon_close.png") no-repeat center top;
	background-size: contain;
	width: 45px;
	height: 33px;
	display: inline-block;
}

.popup-all {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0px;
	left: 0px;
	overflow: auto;
	z-index: 100000;
	display: none;
}

.popup-overlay {
	width: 100%;
	height: 9999px;
	background: #0b5689 none repeat scroll 0% 0%;
	position: fixed;
	top: 0px;
	left: 0px;
}

.popup-box {
	left: 50%;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	transform: translateX(-50%);
	position: absolute;
	width: 100%;
	color: #FFF;
}

.popup-box a {
	color: #FFF;
}

.popup-header{
	margin: 30px 40px 0px;
	font-size: 18px;
}

.popup-header a {
	color: #27AAE1;
}

.popup-header-left {
	float: left;
}

.popup-header-left p {
	padding-top: 5px;
}

.popup-header-right {
	float: right;
}

.popup-content {
	color: #FFF;
	text-align: center;
	max-width: 547px;
	width: 100%;
	margin: 87px auto 0px;
	padding: 0px 40px;
	line-height: 58px;
}

.popup-content h2 {
	font-size: 30px;
}

.popup-content hr {
	border: 1px solid #FFF;
	margin: 50px 0px;
}

.popup-content p {
	font-size: 12px;
}

@media only screen and (max-width: 980px){
	header {
		height: 100%;
	}

	.headerBox {
		display: none;
	}

	.headerBox-mobile {
		display: block;
	}

	.footerBox {
		width: 100%;
		text-align: center;
	}

	.footerLeftBox {
		float: none;
	}

	.footerRightBox {
		display: none;
	}
}

@media only screen and (max-width: 360px){
	.headerBox-mobile #logo {
		width: 125px;
		height: 42px;
	}

	.popup-header {
		font-size: 14px;
	}

	.popup-content {
		margin: 40px auto 0px;
		line-height: 30px;
	}

	.popup-content h2 {
		font-size: 18px;
	}

	.popup-content hr {
		margin: 25px 0px;
	}
}


/*===========================================================================
1.0 Index
===========================================================================*/

@media only screen and (max-width: 980px){
	.sliderBox {
		width: 100%;
		padding: 0px 40px;
		text-align: center;
	}

	.sliderInfoBox {
		width: 100%;
		text-align: center;
		margin-bottom: 30px;
		float: none;
	}

	.loanWrapper {
		float: none;
		margin: 0 auto;
	}

	.rulesBox {
		width: 100%;
	}

	.rulesBox h3 {
		text-align: center;
	}

	.rulesBox ul {
		text-align: center;
	}

	.rulesBox ul li {
		display: inline-block;
		float: none;
		width: 210px
	}

	.stepImage {
		width: 210px;
		height: 150px;
	}

	.stepInfo {
		height: 145px;
		text-align: left;
	}

	.paymentBox {
		width: 100%;
		height: 100%;
		display: block;
	}

	.paymentInfo {
		width: 100%;
		display: block;
		text-align: center;
		padding-right: 20px;
	}

	.transferBox {
		width: 100%;
		display: block;
	}

	.transferBox ul {
		text-align: center;
	}

	.transferBox ul li {
		display: inline-block;
		float: none;
		margin-top: 21px;
		margin-left: 10px;
	}
}

@media only screen and (max-width: 640px){
	.sliderInfoBox {
		font-size: 24px;
	}

	.loanWrapper {
		width: 100%;
	}

	.loanBox h3, .loanDetailBox h3 {
		font-size: 18px;
	}

	.loanBox {
		width: 100%;
		float: none;
	}

	.loanInfoBox h4 {
		font-size: 16px;
	}

	span.info {
		float: none;
		text-align: left;
		border: 1px solid #F5B419;
		padding: 14px 10px;
		font-size: 16px;
		font-weight: bold;
	}

	.loanDetailBox {
		width: 100%;
		float: none;
		padding-left: 0px;
		border-top: 1px solid #E6E7E8;
		border-left: 0px;
		padding-top: 13px;
	}

	.loanDetailBox table {
		margin: 0px auto;
		text-align: center;
	}

	.loanDetailBox table tr {
		display: inline-block;
		text-align: left;
		margin: 0px 20px;
	}

	.loanDetailBox table tr td {
		font-size: 16px;
	}

	.loanDetailBox table tr td:nth-child(1) {
		/*width: 100%;*/
	}

	.loanDetailBox table tr td:nth-child(2) {
		padding: 0px 0px 20px;
	}

	.loanDetailBox table tr td:last-child {
		color: #F5B419;
		display: inline-block;
	}

	.loanWrapper .nextBtn {
		float: none;
	}

	.loanWrapper .defBtn {
		width: 160px;
		height: 50px;
		font-size: 16px;
		margin: 0px auto;
		padding-top: 10px;
	}

	.rulesBox h3 {
		font-size: 18px;
	}

	.stepInfo span, .stepInfo p {
		font-size: 16px;
	}

	.paymentInfo {
		font-size: 18px;
	}

	.transferBox ul li span {
		font-size: 16px;
	}
}


/*===========================================================================
2.0 About Us, Contact Us
===========================================================================*/

@media only screen and (max-width: 980px){
	.titleWrapper {
		padding: 0px 40px;
	}

	.titleBox {
		width: 100%;
		display: block;
	}

	.titleContent {
		width: 100%;
		height: 69px;
		line-height: 69px;
		font-size: 24px;
		display: block;
	}

	.titleDesc {
		width: 100%;
		height: 255px;
		text-align: center;
		font-size: 16px;
		display: block;
	}

	.aboutUsImageBox {
		width: 100%;
	}

	.contactUsWrapper {
		width: 100%;
		padding: 0px 40px;
	}
}

@media only screen and (max-width: 880px){
	.contactUsWrapper {
		text-align: center;
	}

	.contactUsWrapper .halfBox, .contactUsWrapper .halfBox:last-child {
		width: 100%;
		float: none;
	}

	.contactUsWrapper .halfBox ul li:nth-child(2), .contactUsWrapper .halfBox ul li:nth-child(3) {
		width: 100%;
		float: none;
	}

	.contactUsWrapper .halfBox ul {
		margin-bottom: 40px;
	}

	.contactUsWrapper .halfBox .defBtn {
		display: inline;
		padding: 20px 62px;
	}

	.contactFooter {
		display: none;
	}
}

@media only screen and (max-width: 360px){
	.titleDesc{
		font-size: 12px;
	}
}


